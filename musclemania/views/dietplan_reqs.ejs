<%- include("partials/header")%>

<body>
         <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-4">Hello, Fitness Lovers</h1>
          <p class="lead">Here you can request dietplan and find maching dietplan which fits in your schedule.</p>
          <a href="/dietplan_reqs/newdietplan_req" class="btn btn-secondary">request new dietplan</a>
        </div>
        </div>
        
    <div class="container">
    <div class="row">      
            
    <%dietplans.forEach(function(dietplan){ %>
      
        <div class="col col-lg-4">
            <div class="card text-center text-white bg-dark border-dark  mb-4" >
            <div class="card-header"><%-dietplan.name%></div>
            <div class="card-body text-white bg-secondary">
                <h5 class="card-title">for <%-dietplan.profession%></h5>
                <h6>Age {yrs}: <%-dietplan.age%><h6>
                <h6>Weight (kgs): <%-dietplan.weight%></h6>
                <h6>Height (cms): <%-dietplan.height%></h6>
                <a href="/dietplan_reqs/<%= dietplan._id %>" class="btn btn-dark" >show dietplan</a>
            </div>
        </div>
        </div>
        
    <%});%>
    </div>
    </div>>
