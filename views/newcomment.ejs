<%- include("partials/header")%>
<style>
.instruction{
    padding: 3% 0% 3% 0%;
    background-color: rgb(53, 51, 51);
    color: rgb(240, 240, 226);
    font: 1em sans-serif;
}
.form{
    padding-top: 4%;
}
</style>
<body>
<div class="instruction">
    <h2 class="container">Add comment -</h2>
</div>
<div class="container form">
    <form action="/dietplan_reqs/<%= dietplan_req._id %>/comments" method="post">
        <div class="form-row">
            <div class="form-group col-md-8">
              <label >TEXT</label>
              <input type="text" name="comment[text]" class="form-control"  placeholder="author">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
              <label >AUTHOR</label>
              <input type="text" name="comment[author]" class="form-control"  placeholder="text">
            </div>
        </div>
          <button type="submit" class="btn btn-primary">Post</button>
    </form>
    <br>
    <a href="/dietplan_reqs/<%= dietplan_req._id %>" class="btn btn-secondary">Go Back</a>
</div>

    
</body>
